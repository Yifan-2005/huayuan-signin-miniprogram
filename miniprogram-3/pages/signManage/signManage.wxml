<view class="container">
  <!-- 未登录 -->
  <view wx:if="{{loginState === 'notLogin'}}" class="state-tip">
    <image src="/images/empty-user.png" class="state-img"></image>
    <view class="state-title">尚未登录</view>
    <view class="state-desc">请先登录后查看课程信息</view>
    
   
  </view>

  <!-- 未有授课课程 -->
  <view wx:elif="{{loginState === 'noCourse'}}" class="state-tip">
    <image src="/images/empty-class.png" class="state-img"></image>
    <view class="state-title">暂无授课课程</view>
    <view class="state-desc">请联系管理员添加授课班级或自行添加</view>
  </view>

  <!-- 有课程 -->
  <block wx:elif="{{loginState === 'ok'}}">
    <block wx:for="{{courseList}}" wx:key="id">
      <view 
        class="card" 
        data-course-name="{{item.name}}" 
        data-class-name="{{item.class}}" 
        bindtap="onSelectCourse"
      >
        <view class="course">{{item.name}}</view>
        <view class="cls">{{item.class}}</view>
      </view>
    </block>
  </block>
</view>
<custom-tab-bar/>
