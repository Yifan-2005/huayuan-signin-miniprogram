.page {
  min-height: 100vh;
  background: #f7f7f7;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
}
.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.04);
  padding: 48rpx 32rpx 32rpx 32rpx;
  width: 90%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 32rpx;
  background: #eaeaea;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
.input-group {
  width: 100%;
  margin-bottom: 28rpx;
}
.input {
  width: 100%;
  height: 88rpx;
  padding: 0 30rpx;
  border: 1px solid #e0e0e0;
  border-radius: 16rpx;
  background: #fafbfc;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  box-sizing: border-box;
}

.password-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  border: 1px solid #e0e0e0;
  border-radius: 16rpx;
  background: #fafbfc;
  margin-bottom: 16rpx;
  box-sizing: border-box;
  padding-right: 10rpx;
}

.password-input {
  flex: 1;
  height: 88rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  background: transparent;
  border: none;
}

.toggle-eye {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

.teaching-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.teaching-btn {
  margin-left: 20rpx;
  background: #49b1f5;
  color: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 10rpx 24rpx;
}
.teaching-selected {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}
.teaching-chip {
  background: #eaf6ff;
  color: #2692d1;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.button-area {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.confirm-btn {
  width: 70%;
  height: 88rpx;
  background: #49b1f5;
  color: #fff;
  font-size: 34rpx;
  border: none;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(73,177,245,0.15);
  margin-top: 20rpx;
}
::placeholder {
  color: #cccccc;
}

/* 多选弹窗样式 */
.teaching-modal {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.15);
  z-index: 999;
  display: flex; align-items: center; justify-content: center;
}
.teaching-popup {
  background: #fff;
  border-radius: 18rpx;
  padding: 40rpx 36rpx 24rpx 36rpx;
  min-width: 400rpx;
  max-width: 90vw;
}
.checkbox-label {
  display: flex; align-items: center; margin-bottom: 18rpx;
  font-size: 28rpx;
}
.modal-btns {
  display: flex; justify-content: flex-end; gap: 20rpx;
  margin-top: 24rpx;
}
.modal-cancel, .modal-confirm {
  padding: 8rpx 24rpx; border-radius: 12rpx;
}
.modal-cancel { background: #eee; color: #666; }
.modal-confirm { background: #49b1f5; color: #fff; }
.avatar-tip {
  color: #666;
  font-size: 22rpx;
  text-align: center;
  margin-top: 12rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 16rpx auto;
  position: relative;
  border: 2rpx solid #eaeaea;
}
.textdown{
  color: #2889c9;
  font-size: 28rpx;
  margin-left: 20rpx;
}