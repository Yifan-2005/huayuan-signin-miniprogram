.page {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 0 0 40rpx 0;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #359bdf;
  margin: 40rpx 0 20rpx 40rpx;
  letter-spacing: 2rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.loading,
.empty {
  text-align: center;
  color: #b0b0b0;
  font-size: 30rpx;
  margin-top: 80rpx;
}

.card {
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 6rpx 24rpx rgba(53,155,223,0.08);
  padding: 32rpx 32rpx 24rpx 32rpx;
  margin: 0 24rpx 28rpx 24rpx;
  transition: box-shadow 0.2s;
  cursor: pointer;
}

.card:active {
  box-shadow: 0 2rpx 8rpx rgba(53,155,223,0.12);
}

.line.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 10rpx;
}

.line {
  font-size: 26rpx;
  color: #222;
  line-height: 38rpx;
  margin-bottom: 4rpx;
}

.line:nth-child(2),
.line:nth-child(3) {
  color: #222;
  font-weight: 500;
}

.line:nth-child(n+4) {
  color: #222;
  font-weight: 400;
}

button {
  width: 90%;
  max-width: 600rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: #359bdf !important;
  color: #fff !important;
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx auto 30rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(53,155,223,0.10);
}