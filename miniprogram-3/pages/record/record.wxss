/* 页面容器 */
.container3 {
  padding: 20px;
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 每个签到记录的样式 */
.record-item {
  background-color: #ffffff;
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 15px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  width: 100%;  /* 让框的宽度占满整个页面 */
  box-sizing: border-box;  /* 确保 padding 不影响整体宽度 */
}

/* 课程名称 */
.course-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

/* 签到时间 */
.sign-time {
  font-size: 14px;
  color: #888;
  margin-top: 5px;
}

/* 签到类型 */
.sign-type {
  font-size: 14px;
  color: #24a1db;  /* 设置为绿色，可以根据需要调整颜色 */
  margin-top: 10px;
}


/* 没有记录的提示 */
.no-records {
  text-align: center;
  color: #888;
  font-size: 16px;
}
